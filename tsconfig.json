{
    "compilerOptions": {
        "target": "ES2021",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts", "./jest.config.ts"],
    "exclude": ["./node_modules"]
}
